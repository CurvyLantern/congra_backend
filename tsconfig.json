{
	"compilerOptions": {
		"outDir": "dist",
		"sourceMap": true,
		"target": "ESNext",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"strict": true,
		"skipLibCheck": true
	},

	"include": ["*.d.ts", "./*.js", "src", "arbitary", "db"]
}
